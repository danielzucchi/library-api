{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Node.js AND Library Application API",
    "description": "Node.js AND Library Application API for ADA campus",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/library",
  "tags": [
    {
      "name": "Books",
      "description": "API for books in the system"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/books": {
      "post": {
        "tags": ["Book"],
        "description": "Create new book in system",
        "parameters": [
          {
            "name": "book",
            "in": "body",
            "description": "Book that we want to create",
            "schema": {
              "$ref": "#/definitions/BookRequest"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New book is created",
            "schema": {
              "$ref": "#/definitions/BookResponse"
            }
          },
          "412": {
            "description": "Precondition failed - missing or wrong field",
            "type": "string"
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": ["Book"],
        "description": "Find a book by id in system",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "id of the book in the system",
            "format": "/^[0-9a-fA-F]{24}$/"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Gets book that matches ID",
            "schema": {
              "$ref": "#/definitions/BookResponse"
            }
          },
          "400": {
            "description": "Invalid ID.",
            "type": "string"
          },
          "500": {
            "description": "Something went wrong.",
            "type": "string"
          }
        }
      },
      "put": {
        "tags": ["Book"],
        "description": "Find a book by id in system and update its fields",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "id of the book in the system",
            "format": "/^[0-9a-fA-F]{24}$/"
          },
          {
            "name": "book",
            "in": "body",
            "description": "New book that we want to create",
            "schema": {
              "$ref": "#/definitions/BookRequest"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Returns book that was updated",
            "schema": {
              "$ref": "#/definitions/BookResponse"
            }
          },
          "404": {
            "description": "Book not found.",
            "type": "string"
          },
          "500": {
            "description": "Something went wrong.",
            "type": "string"
          }
        }
      }
    }
  },

  "definitions": {
    "BookRequest": {
      "required": [
        "title",
        "isbn",
        "author",
        "edition",
        "numOfCopies",
        "active"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "isbn": {
          "type": "string",
          "uniqueItems": true
        },
        "author": {
          "type": "string"
        },
        "edition": {
          "type": "number"
        },
        "numOfCopies": {
          "type": "number"
        },
        "about": {
          "type": "string"
        },
        "numOfPages": {
          "type": "number"
        },
        "illustrator": {
          "type": "string"
        },
        "copyrightYear": {
          "type": "number"
        },
        "editor": {
          "type": "string"
        },
        "genre": {
          "type": "string"
        },
        "publisher": {
          "type": "string"
        },
        "coverImage": {
          "type": "string"
        },
        "active": {
          "type": "boolean"
        }
      }
    },
    "BookResponse": {
      "required": [
        "title",
        "isbn",
        "author",
        "edition",
        "numOfCopies",
        "active"
      ],
      "properties": {
        "_id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "isbn": {
          "type": "string",
          "uniqueItems": true
        },
        "author": {
          "type": "string"
        },
        "edition": {
          "type": "number"
        },
        "numOfCopies": {
          "type": "number"
        },
        "about": {
          "type": "string"
        },
        "numOfPages": {
          "type": "number"
        },
        "illustrator": {
          "type": "string"
        },
        "copyrightYear": {
          "type": "number"
        },
        "editor": {
          "type": "string"
        },
        "genre": {
          "type": "string"
        },
        "publisher": {
          "type": "string"
        },
        "coverImage": {
          "type": "string"
        },
        "active": {
          "type": "boolean"
        },
        "__v": {
          "type": "number"
        }
      }
    }
  }
}
